<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvArticleAddId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
            android:id="@+id/spArticleAddProduit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvArticleAddId">
    </Spinner>

    <Spinner
            android:id="@+id/spArticleAddColori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/spArticleAddProduit">
    </Spinner>

    <Spinner
            android:id="@+id/spArticleAddTaille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/spArticleAddColori">
    </Spinner>

    <Spinner
            android:id="@+id/spArticleAddPlacelogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/spArticleAddTaille">
    </Spinner>

    <EditText
            android:id="@+id/edArticleAvecPrix_prixUHT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="@string/hint_prix_uht"
            android:inputType="textAutoComplete"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/spArticleAddPlacelogo"/>

    <Button
            android:id="@+id/bt_save_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/button_save"
            android:textColor="@color/buttonLabel"
            app:layout_constraintTop_toBottomOf="@id/edArticleAvecPrix_prixUHT"/>

</androidx.constraintlayout.widget.ConstraintLayout>
