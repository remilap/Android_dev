<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvProduitAddId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
            android:id="@+id/spProduitAddColori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvProduitAddId">
    </Spinner>

    <Spinner
            android:id="@+id/spProduitAddTaille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/spProduitAddColori">
    </Spinner>

    <Spinner
            android:id="@+id/spProduitAddPlacelogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/small_padding"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/spProduitAddTaille">
    </Spinner>

    <Button
            android:id="@+id/bt_save_produit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/button_save"
            android:textColor="@color/buttonLabel"
            app:layout_constraintTop_toBottomOf="@id/spProduitAddPlacelogo"/>

</androidx.constraintlayout.widget.ConstraintLayout>
